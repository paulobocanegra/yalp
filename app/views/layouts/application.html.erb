<!DOCTYPE html>
<html>
  <head>
    <title>Yalp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel='icon' type='image/x-icon' href="<%= image_url('logo.png') %>" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/e3573ab29b.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lora&family=Merriweather:wght@300&family=Trirong:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script> 

        window.logoURL = "<%= image_url('logo.png') %>"
        window.brentURL = "<%= image_url('signup_illustration.png') %>"
        window.homeMAIN = "<%= image_url('restaurant1.jpg') %>"
        window.rating4 = "<%= image_url('rating.jpg') %>"
        window.rick = "<%= image_url('rick.png') %>"
        window.home = "<%= image_url('homepage.jpg') %>"
        window.phone = "<%= image_url('phone.png') %>"
        window.direction = "<%= image_url('direction.png') %>"
        window.map = "<%= image_url('map.png') %>"
        window.gotham = "<%= image_url('gotham.png') %>"

    </script>
      <% if current_user %>
          <script>
            window.currentUser = {
              "id": <%= current_user.id %>,
              "email": "<%= current_user.email %>"
            };
          </script> 
      <% end %>

  </head>

  <body>
    <%= yield %>
    
  </body>
</html>
