<!DOCTYPE html>
<html>
  <head>
    <title>Yalp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel='icon' type='image/x-icon' href="<%= image_url('logo.png') %>" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script> 

        window.logoURL = "<%= image_url('logo.png') %>"
        window.brentURL = "<%= image_url('signup_illustration.png') %>"
        window.homeMAIN = "<%= image_url('restaurant1.jpg') %>"

    </script>
      <% if current_user %>
          <script>
            window.currentUser = {
              "id": <%= current_user.id %>,
              "email": "<%= current_user.email %>"
            };
          </script> 
      <% end %>

  </head>

  <body>
    <%= yield %>
    
  </body>
</html>
